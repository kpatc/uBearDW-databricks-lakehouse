{
  "name": "uBear_DW_Batch_Gold_Processing",
  "description": "Job batch quotidien pour processus Gold layer - SCD2 dimensions et MERGE trip_fact",
  "email_notifications": {
    "on_start": [],
    "on_success": ["data-team@ubear.com"],
    "on_failure": ["data-team@ubear.com", "data-lead@ubear.com"],
    "no_alert_for_skipped_runs": false
  },
  "webhook_notifications": {},
  "timeout_seconds": 7200,
  "max_concurrent_runs": 1,
  "tasks": [
    {
      "task_key": "gold_dimensions_scd2",
      "description": "Mise à jour des dimensions SCD2 (eater, merchant, courier) et dimensions statiques",
      "notebook_task": {
        "notebook_path": "/Repos/ubear-dw/pipelines/gold_pipeline",
        "source": "WORKSPACE"
      },
      "existing_cluster_id": "${var.batch_cluster_id}",
      "timeout_seconds": 3600,
      "email_notifications": {},
      "notification_settings": {
        "no_alert_for_skipped_runs": false,
        "no_alert_for_canceled_runs": false,
        "alert_on_last_attempt": false
      }
    },
    {
      "task_key": "optimize_gold_tables",
      "description": "Optimisation et maintenance des tables Gold",
      "depends_on": [
        {
          "task_key": "gold_dimensions_scd2"
        }
      ],
      "spark_python_task": {
        "python_file": "/Repos/ubear-dw/utils/optimize_tables.py",
        "parameters": [
          "--catalog", "ubear_catalog",
          "--schema", "ubear_gold"
        ]
      },
      "existing_cluster_id": "${var.batch_cluster_id}",
      "timeout_seconds": 1800,
      "email_notifications": {},
      "notification_settings": {
        "no_alert_for_skipped_runs": false,
        "no_alert_for_canceled_runs": false,
        "alert_on_last_attempt": false
      }
    },
    {
      "task_key": "data_quality_checks",
      "description": "Vérifications de qualité des données Gold",
      "depends_on": [
        {
          "task_key": "optimize_gold_tables"
        }
      ],
      "notebook_task": {
        "notebook_path": "/Repos/ubear-dw/expectations/data_quality_validation",
        "source": "WORKSPACE"
      },
      "existing_cluster_id": "${var.batch_cluster_id}",
      "timeout_seconds": 1200,
      "email_notifications": {},
      "notification_settings": {
        "no_alert_for_skipped_runs": false,
        "no_alert_for_canceled_runs": false,
        "alert_on_last_attempt": false
      }
    }
  ],
  "job_clusters": [
    {
      "job_cluster_key": "batch_processing_cluster",
      "new_cluster": {
        "spark_version": "13.3.x-scala2.12",
        "node_type_id": "i3.xlarge",
        "num_workers": 4,
        "spark_conf": {
          "spark.databricks.delta.preview.enabled": "true",
          "spark.databricks.delta.optimizeWrite.enabled": "true",
          "spark.databricks.delta.autoCompact.enabled": "true"
        },
        "aws_attributes": {
          "availability": "SPOT_WITH_FALLBACK",
          "zone_id": "auto"
        },
        "custom_tags": {
          "project": "ubear-dw",
          "environment": "production",
          "team": "data-engineering"
        }
      }
    }
  ],
  "schedule": {
    "quartz_cron_expression": "0 0 2 * * ?",
    "timezone_id": "UTC",
    "pause_status": "UNPAUSED"
  },
  "format": "MULTI_TASK",
  "git_source": {
    "git_url": "https://github.com/kpatc/uBearDW-databricks-lakehouse",
    "git_provider": "gitHub",
    "git_branch": "main"
  },
  "parameters": [
    {
      "name": "catalog",
      "default": "ubear_catalog"
    },
    {
      "name": "schema.silver",
      "default": "ubear_silver"
    },
    {
      "name": "schema.gold",
      "default": "ubear_gold"
    }
  ]
}
